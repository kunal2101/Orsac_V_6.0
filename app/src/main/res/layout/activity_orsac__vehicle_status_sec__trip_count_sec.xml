<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/toptalovbgimage"
    android:orientation="vertical">
    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar_orsac" />


    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/titl"

        android:layout_gravity="center_vertical"
        android:background="@drawable/roundshape"
        android:drawableLeft="@drawable/ic_international_search_symbol"
        android:ellipsize="end"
        android:hint="   Search Vehicle No.."
        android:maxLines="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="17dp"
        android:visibility="visible" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/t">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/banar1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/gov_orisha_1"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="Live Status"
                android:visibility="gone"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingBottom="20dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical">


                    <TextView
                     android:id="@+id/tot_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17"
                        android:textSize="24dp"
                        android:textColor="#FF0000"
                        android:layout_gravity="center"/>
                    <TextView
                      android:id="@+id/tot_vehiclesss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="Total Trip Cont"
                        android:textColor="#FF0000"
                        android:gravity="center"
                        />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/halt_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textSize="24dp"
                        android:textColor="#FFF"
                        android:layout_gravity="center"/>
                    <customfonts.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="Halt Vehicle Status"
                        android:textColor="#FFF"
                        android:gravity="center"/>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center">


                    <TextView
                      android:id="@+id/run_cont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,9k"
                        android:textSize="24dp"
                        android:textColor="#FFF"
                        android:layout_gravity="center"/>
                    <customfonts.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="Running status"
                        android:textColor="#FFF"
                        android:gravity="center"/>

                </LinearLayout>



                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/stop_con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,4k"
                        android:textSize="24dp"
                        android:textColor="#FFF"
                        android:layout_gravity="center"/>
                    <customfonts.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="Stop Vehicle"
                        android:textColor="#FFf"
                        android:gravity="center"/>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/not_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,4k"
                        android:textSize="24dp"
                        android:textColor="#FFF"
                        android:layout_gravity="center"/>
                    <customfonts.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="Not Working"
                        android:textColor="#FFf"
                      android:gravity="center"/>


                </LinearLayout>


            </LinearLayout>





            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rela_titl"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="12dp"
                    android:padding="8dp" />



            </LinearLayout>

        </LinearLayout>
    </FrameLayout>




















</LinearLayout>


























