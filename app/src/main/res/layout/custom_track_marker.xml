<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dip"
        android:paddingLeft="10dip"
        android:paddingBottom="25dip"
        android:background="@drawable/bonuspack_bubble_black">

      <!--  <Button
            android:id="@+id/btnClose"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/btn_closed"
            android:layout_gravity="right"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="2dip">

            <!--<Button
                android:id="@+id/btnClose"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:background="@drawable/btn_closed"
                android:layout_gravity="right"/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/nameIcon"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginLeft="5dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_map_truck_green"/>
                <TextView
                    android:id="@+id/nameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vechile Name"
                    android:textSize="10dip"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/nameIcon"
                    android:layout_toLeftOf="@+id/btnClose"/>

                <Button
                    android:id="@+id/btnClose"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/ic_map_truck_red"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"/>

            </RelativeLayout>

           <!-- <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dip">

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/ic_mobile"/>
                <TextView
                    android:id="@+id/numberTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vechile Number"
                    android:textSize="10dip"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/actionBar"/>

            </LinearLayout>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="-8dip"
                android:paddingRight="20dip">

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/ic_map_truck_green"/>
                <TextView
                    android:id="@+id/addressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-57, Noida, India"
                    android:textSize="10dip"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/white"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dip"
                android:paddingRight="20dip">

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/ic_map_truck_green"/>
                <TextView
                    android:id="@+id/timeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXX"
                    android:textSize="10dip"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
