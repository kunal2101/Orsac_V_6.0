<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lin_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tools"
    android:orientation="vertical"
    android:background="@drawable/border"

    xmlns:android="http://schemas.android.com/apk/res/android">

    >
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardElevation="5dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        app:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/com_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name "
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/accent"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ins_dev"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:text="install Device"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/bg_valid"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_margin="1dp"
                    android:text="BG Valid"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/bg_amount"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_margin="1dp"
                    android:text="BG amount"
                    android:textColor="@color/black"/>


            </LinearLayout>
            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"

                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="ACTIVE"
                android:textStyle="bold"
                android:textSize="10sp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
