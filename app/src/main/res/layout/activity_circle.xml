<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="orsac.rosmerta.orsac_vehicle.android.orsac.CircleActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
android:layout_gravity="center"
        android:layout_marginRight="1dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/circle_progre"
                android:layout_width="120dp"
                android:layout_height="120dp"
                custom:arc_progress="10000"
                custom:arc_bottom_text=""

                custom:arc_finished_color="@android:color/holo_red_dark"
                custom:arc_unfinished_color="@android:color/holo_red_dark"
                custom:arc_max="10000"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/name_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overspeed"
            android:textSize="12dip"
            android:textColor="@color/bill_back_color"
            android:fontFamily="serif"
            android:layout_marginTop="-10dip"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
