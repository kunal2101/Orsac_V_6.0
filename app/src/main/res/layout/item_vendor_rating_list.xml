<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/white_rect"
    android:padding="10.2dp"
    android:layout_marginLeft="9.3dp"
    android:layout_marginRight="9.3dp"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_marginLeft="10.3dp"
    android:layout_marginRight="10.1dp"
    app:cardCornerRadius="5.8dp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="184.2dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <customfonts.MyTextView
                android:id="@+id/com_name"
                android:layout_marginTop="19.3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name "
                android:singleLine="true"
                android:textColor="#323643"
                android:textSize="13.4sp"/>
            <TextView
                android:id="@+id/pertentage"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#ffba00"
                android:text="45.67%"/>

        </LinearLayout>

        <TextView
            android:id="@+id/value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/rect_blue1"
            android:text="Call Support"
            android:textSize="11.4sp"
            android:layout_marginRight="5dp"
            android:textColor="#fbfbfb"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_btc"/>


        <customfonts.MyTextView
            android:id="@+id/icon_type_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 7 days Active Device "
            android:layout_marginLeft="5dp"

            android:textSize="10sp"
            android:textColor="#6e7f8d"
            android:layout_gravity="center"/>


    </LinearLayout>



    <View
        android:layout_marginLeft="10.2dp"
        android:layout_marginRight="10.2dp"
        android:layout_marginTop="95dp"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#33979797"/>


    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="105dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Installed"
                android:textColor="#323643"
                android:textStyle="bold"

                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/bg_insall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textStyle="bold"
                android:textSize="11.4sp"
                android:textColor="#323643"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BG Validity"
                android:textColor="#323643"
                android:textStyle="bold"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/bg_status_"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALID"
                android:textSize="11.4sp"
                android:textStyle="bold"
                android:textColor="#323643"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/buy_now"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="145dp"
        android:background="@drawable/rect_blue1"
        android:text="Buy Now"
        android:visibility="gone"
        android:textColor="#fbfbfb"
        android:textSize="11.4sp" />

</androidx.cardview.widget.CardView>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/white_rect"
    android:padding="19.2dp"
android:visibility="gone"
    android:layout_marginLeft="9.3dp"
    android:layout_marginRight="9.3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <customfonts.MyTextView
                    android:id="@+id/sl_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#17b978"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textSize="17.3sp"
                    android:text="1 "/>

                <customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="17.3sp"
                    android:text="Comapnay Name "/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_btc"/>


                <customfonts.MyTextView
                    android:id="@+id/icon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 7 days Active Device "
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp"
                    android:textColor="#6e7f8d"
                    android:layout_gravity="center"/>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20%"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:textColor="#17b978"/>


                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrowup"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="7dp"/>


                <customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="17.3sp"
                    android:text="20.56%"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"

                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="CALL"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BG Status - ---- "
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
           android:visibility="visible"
            android:textStyle="bold"
            android:textColor="@color/txt_color"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Install - Invalid "
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@color/txt_color"
            />
    </LinearLayout>


</LinearLayout>
</LinearLayout>