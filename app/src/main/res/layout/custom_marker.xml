<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
android:paddingTop="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/topLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/row_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dip">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_vehicle"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/ic_travelling_vehicles_of_a_road"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"/>
                <customfonts.MyTextView
                    android:id="@+id/etp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Etp No."
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginLeft="2dip"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <customfonts.MyTextView
                    android:id="@+id/circle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Circle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/vehicle_info"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_marginTop="5dip"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_marginBottom="5dip"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </RelativeLayout>
        <!-- end row one -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/row_one"
            android:paddingBottom="2dip">

            <!-- speed & ignition -->
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Vehicleno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <customfonts.MyTextView
                            android:id="@+id/vehic_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dip"
                            android:text="xxxxxx"
                            android:textColor="@color/black"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone"
                        android:layout_marginTop="3dip">
                        <TextView
                            android:text="Packet Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_packettime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="xxxxxx"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="3dip"
                        android:visibility="gone">
                        <TextView
                            android:text="GPS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_gps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="xxxxxx"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/textred"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="3dip">
                        <TextView
                            android:text="Quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/quitity_tex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="xxxxxx"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip">
                        <TextView
                            android:text="Start Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <customfonts.MyTextView
                            android:id="@+id/startTime_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dip"
                            android:text="xxxxxx"
                            android:textColor="@color/black"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="3dip">
                        <TextView
                            android:text="Code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <customfonts.MyTextView
                            android:id="@+id/code_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="xxxxxx"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>

                </TableLayout>

            </RelativeLayout>
            <!-- end speed & ignition -->

            <!-- gps & vehicle type -->
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:text="Mineral name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/min_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="xxxxxx"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="3dip">
                        <TextView
                            android:text="Speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="xxxxxx"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/textred"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="3dip">
                        <TextView
                            android:text="Direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/dir_text_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="xxxxxx"
                            android:layout_marginLeft="2dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="3dip">
                        <TextView
                            android:text="Passvalid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_yellow"
                            android:textSize="@dimen/vehicle_info"
                            android:textStyle="bold"/>

                        <customfonts.MyTextView
                            android:id="@+id/pass_valid_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="xxxxxx"
                            android:layout_marginLeft="5dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/vehicle_info"/>
                    </TableRow>



                </TableLayout>

            </RelativeLayout>
            <!-- end gps & vehicle type -->

        </LinearLayout>




    </RelativeLayout>




    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/topLay"/>
    <LinearLayout
        android:id="@+id/footer_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:orientation="vertical"
        android:background="@color/gray">

        <customfonts.MyTextView
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="House No. K-1009 sector 23 sanjeev nagar...."
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:layout_alignParentLeft="true"
            android:padding="4dip"
            android:layout_toLeftOf="@+id/layout_action"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/black"/>
        <customfonts.MyTextView
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="House No. K-1009 sector 23 sanjeev nagar...."
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:layout_alignParentLeft="true"
            android:padding="4dip"
            android:layout_toLeftOf="@+id/layout_action"/>




    </LinearLayout>


</RelativeLayout>