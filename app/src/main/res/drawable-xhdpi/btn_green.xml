<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#cc130f34" />
            <stroke
                android:width="1dp"
                android:color="#cc130f34" />
            <!--<corners
                android:radius="5dp" />-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#3cb371"
                android:endColor="#3cb371"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#cc130f34" />
            <!--<corners
                android:radius="5dp" />-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>